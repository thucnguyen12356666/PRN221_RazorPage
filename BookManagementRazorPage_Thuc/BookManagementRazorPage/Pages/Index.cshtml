@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Arial', sans-serif;
    }

    body {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
        font-size: 1.2rem;
        background: rgba(0, 0, 0, 0.1);
    }

        .header .logo {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .header nav {
            display: flex;
            gap: 20px;
        }

            .header nav a {
                color: white;
                text-decoration: none;
                font-size: 1rem;
            }

    .login-box {
        background: white;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    h1 {
        margin-bottom: 30px;
        color: #333;
    }

    .input-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .input-group label {
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
            display: block;
        }

        .input-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: 0.3s ease;
        }

            .input-group input:focus {
                border-color: #6a11cb;
                box-shadow: 0 0 5px rgba(106, 17, 203, 0.4);
            }

    .login-btn {
        background: linear-gradient(45deg, #6a11cb, #2575fc);
        color: white;
        padding: 12px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-top: 10px;
    }

        .login-btn:hover {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
        }

</style>

<div class="header">
    <div class="logo">CandidateManagement_NguyenMinhThuc</div>
    <nav>
        <a href="#">Home</a>
        <a href="#">Privacy</a>
    </nav>
</div>

<div class="login-box">
    <h1 class="display-4">Login</h1>
    @if (TempData["Message"] != null)
    {
        <div class="text-danger bg-danger">@TempData["Message"]</div>
    }
    <form method="post" asp-page-handler="OnPost">
        <div class="input-group">
            <label for="email">UseName</label>
            <input type="text" id="email" name="username" placeholder="Enter your username" required>
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="login-btn">Login</button>
    </form>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
