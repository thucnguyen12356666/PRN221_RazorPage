@model BookManagementRazorPage.Pages.BookPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    int? role = HttpContext.Session.GetInt32("RoleID");
    if (role == null || role != 1)
    {
        TempData["ErrorMessage"] = "You are not authorized to access this page!";
        Response.Redirect("/Error");
    }
}

